<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/leafwhitye">

    <ImageView
        android:layout_width="450dp"
        android:layout_height="200dp"
        android:src="@drawable/firetensor"
        android:layout_marginTop="150dp"
        android:id="@+id/img"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        >


    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/slide3_title"
        android:textColor="@color/Black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@id/img"
        android:layout_marginTop="12dp"
        android:id="@+id/slide_title"/>

    <TextView
        android:id="@+id/slide_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slide_title"
        android:layout_marginLeft="40sp"

        android:layout_marginTop="11dp"
        android:layout_marginRight="40sp"
        android:gravity="center_horizontal"
        android:text="@string/slide3_desc"

        android:textColor="@color/Black"
        android:textSize="22sp" />


</RelativeLayout>